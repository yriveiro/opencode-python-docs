{
  "name": "opencode-python-docs",
  "version": "0.1.0",
  "description": "OpenCode plugin for Python documentation lookup via DevDocs",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "type": "module",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "clean": "rm -rf dist node_modules bun.lock",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run typecheck && bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check ."
  },
  "keywords": [
    "opencode",
    "plugin",
    "python",
    "documentation",
    "devdocs"
  ],
  "author": "yriveiro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yriveiro/opencode-python-docs.git"
  },
  "homepage": "https://github.com/yriveiro/opencode-python-docs#readme",
  "bugs": {
    "url": "https://github.com/yriveiro/opencode-python-docs/issues"
  },
  "dependencies": {
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/turndown": "^5.0.6",
    "bun-types": "^1.3.8",
    "typescript": "^5.9.3"
  }
}
